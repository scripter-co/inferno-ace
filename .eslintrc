{
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-undef": "error"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "inferno",
    "jest"
  ]
}
